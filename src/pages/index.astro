import { sql } from '../lib/db';
import SEO from '../components/SEO.astro';
import Schema from '../components/Schema.astro';

// Fetch homepage content
const homepageContent = await sql`
  SELECT section_type, title, subtitle, content
  FROM homepage_content
  WHERE site = 'relocation' AND is_active = true
  ORDER BY section_order ASC
`;

// Fetch companies - filter for relocation services
const companies = await sql`
  SELECT
    name,
    slug,
    description,
    headquarters,
    logo_url,
    specializations,
    global_rank
  FROM companies
  WHERE status = 'published'
    AND company_type = 'relocation_services'
  ORDER BY
    CASE WHEN global_rank IS NOT NULL THEN 0 ELSE 1 END,
    global_rank ASC NULLS LAST,
    name ASC
  LIMIT 6
`;

// Fetch articles
const articles = await sql`
  SELECT
    title,
    excerpt,
    slug,
    published_at
  FROM articles
  WHERE app = 'relocation'
    AND status = 'published'
  ORDER BY published_at DESC NULLS LAST
  LIMIT 3
`;

const sections = {
  hero: homepageContent.find((s: any) => s.section_type === 'hero'),
};

