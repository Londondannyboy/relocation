import { sql } from '../lib/db';
import SEO from '../components/SEO.astro';
import Schema from '../components/Schema.astro';
import HumeVoiceInterface from '../components/HumeVoiceInterface';

// Fetch homepage content
const homepageContent = await sql`
  SELECT section_type, title, subtitle, content
  FROM homepage_content
  WHERE site = 'relocation' AND is_active = true
  ORDER BY section_order ASC
`;

// Fetch articles from Quest DB
const articles = await sql`
  SELECT
    title,
    meta_description as excerpt,
    slug,
    published_at,
    featured_asset_url,
    featured_asset_alt,
    video_url,
    video_playback_id
  FROM articles
  WHERE app = 'relocation'
    AND status = 'published'
  ORDER BY published_at DESC NULLS LAST
  LIMIT 6
`;

// Fetch country guides
const countries = await sql`
  SELECT
    id, name, slug, code, flag_emoji, region,
    relocation_motivations, relocation_tags, facts
  FROM countries
  WHERE status = 'published'
  ORDER BY name ASC
  LIMIT 6
`;

// Video playback IDs are now stored directly in the database (video-first architecture)
articles.forEach((article: any) => {
  article.mux_playback_id = article.video_playback_id || null;
});

const sections = {
  hero: homepageContent.find((s: any) => s.section_type === 'hero'),
};

// Mux video playback ID - using Placement's video
