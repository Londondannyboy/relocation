---
import SEO from '../components/SEO.astro';
import HumeVoiceInterface from '../components/HumeVoiceInterface';
import UserIndicator from '../components/UserIndicator';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <SEO
    title="Voice Assistant | Relocation.Quest"
    description="Speak with our AI-powered relocation assistant. Get answers about international relocation, visas, costs, and more."
  />
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      color: #1a202c;
    }

    /* Navigation */
    nav {
      padding: 24px 60px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(20px);
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .logo {
      font-size: 20px;
      font-weight: 900;
      color: white;
      text-decoration: none;
      letter-spacing: -0.5px;
    }

    .nav-links {
      display: flex;
      gap: 40px;
      list-style: none;
    }

    .nav-links a {
      color: white;
      text-decoration: none;
      font-weight: 600;
      font-size: 14px;
      transition: opacity 0.3s;
    }

    .nav-links a:hover { opacity: 0.7; }

    /* Main Content */
    main {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px 20px;
    }

    .container {
      width: 100%;
      max-width: 800px;
    }

    .page-header {
      text-align: center;
      margin-bottom: 48px;
      color: white;
    }

    .page-header h1 {
      font-size: 3rem;
      font-weight: 900;
      margin-bottom: 16px;
      text-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
    }

    .page-header p {
      font-size: 1.25rem;
      opacity: 0.9;
    }

    @media (max-width: 768px) {
      nav {
        padding: 20px 24px;
      }

      .nav-links {
        gap: 20px;
      }

      .page-header h1 {
        font-size: 2rem;
      }

      .page-header p {
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>
  <!-- Navigation -->
  <nav>
    <a href="/" class="logo">Relocation.Quest</a>
    <ul class="nav-links">
      <li><a href="/companies">Companies</a></li>
      <li><a href="/articles">Articles</a></li>
      <li><a href="/voice">Voice Assistant</a></li>
      <li><UserIndicator client:load /></li>
    </ul>
  </nav>

  <!-- Main Content -->
  <main>
    <div class="container">
      <div class="page-header">
        <h1>üéôÔ∏è Voice Assistant</h1>
        <p>Speak with our AI about international relocation</p>
      </div>

      <!-- React Voice Interface Component -->
      <HumeVoiceInterface client:load />
    </div>
  </main>
</body>
</html>
