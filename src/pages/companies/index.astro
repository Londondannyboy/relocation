---
import { sql } from '../../lib/db';

// Fetch all relocation services companies
const companies = await sql`
  SELECT
    id,
    name,
    slug,
    company_type,
    description,
    headquarters,
    logo_url,
    specializations,
    global_rank,
    created_at
  FROM companies
  WHERE status = 'published'
    AND company_type = 'relocation_services'
  ORDER BY
    CASE WHEN global_rank IS NOT NULL THEN 0 ELSE 1 END,
    global_rank ASC NULLS LAST,
    name ASC
`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>International Relocation Services Directory | Relocation</title>
  <meta name="description" content="Comprehensive directory of leading relocation services and international moving companies">
</head>
<body class="bg-gray-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <h1 class="text-2xl font-bold text-blue-600">
            <a href="/">Relocation</a>
          </h1>
        </div>
        <div class="flex items-center space-x-8">
          <a href="/" class="text-gray-700 hover:text-blue-600 font-medium">Home</a>
          <a href="/articles" class="text-gray-700 hover:text-blue-600 font-medium">Articles</a>
          <a href="/companies" class="text-blue-600 font-medium">Companies</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Page Header -->
  <div class="bg-gradient-to-br from-blue-600 to-blue-800 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">International Relocation Services Directory</h1>
      <p class="text-xl text-blue-100 max-w-3xl">
        Comprehensive profiles of leading <strong>relocation services</strong> and <strong>international moving companies</strong> specializing in corporate and personal moves worldwide.
      </p>
    </div>
  </div>

  <!-- Companies Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    {companies.length === 0 ? (
      <div class="text-center py-12">
        <p class="text-gray-600 text-lg">No companies found. Check back soon!</p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {companies.map((company) => (
          <a
            href={`/companies/${company.slug}`}
            class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow p-6 block"
          >
            <!-- Company Logo -->
            {company.logo_url && (
              <div class="mb-4 h-12 flex items-center">
                <img
                  src={company.logo_url}
                  alt={`${company.name} logo`}
                  class="h-10 w-auto"
                />
              </div>
            )}

            <!-- Company Name & Rank -->
            <div class="flex items-start justify-between mb-3">
              <h2 class="text-xl font-bold text-gray-900 flex-1">
                {company.name}
              </h2>
              {company.global_rank && (
                <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-blue-100 text-blue-800">
                  #{company.global_rank}
                </span>
              )}
            </div>

            <!-- Location -->
            {company.headquarters && company.headquarters !== 'Unavailable from provided context' && (
              <div class="text-sm text-gray-600 mb-3">
                üìç {company.headquarters}
              </div>
            )}

            <!-- Description -->
            {company.description && (
              <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                {company.description}
              </p>
            )}

            <!-- Specializations -->
            {company.specializations && company.specializations.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {company.specializations.slice(0, 3).map((spec: string) => (
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-700">
                    {spec}
                  </span>
                ))}
                {company.specializations.length > 3 && (
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium text-gray-500">
                    +{company.specializations.length - 3} more
                  </span>
                )}
              </div>
            )}
          </a>
        ))}
      </div>
    )}
  </div>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12 mt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
        <div>
          <h3 class="text-lg font-bold mb-4">Relocation</h3>
          <p class="text-gray-400 text-sm">Your source for international relocation and moving services.</p>
        </div>
        <div>
          <h3 class="text-lg font-bold mb-4">Navigate</h3>
          <ul class="space-y-2 text-sm">
            <li><a href="/" class="text-gray-400 hover:text-white">Home</a></li>
            <li><a href="/articles" class="text-gray-400 hover:text-white">Articles</a></li>
            <li><a href="/companies" class="text-gray-400 hover:text-white">Companies Directory</a></li>
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-bold mb-4">Resources</h3>
          <ul class="space-y-2 text-sm">
            <li><a href="/companies" class="text-gray-400 hover:text-white">Top Relocation Services</a></li>
            <li><a href="/articles" class="text-gray-400 hover:text-white">Industry News</a></li>
          </ul>
        </div>
      </div>
      <div class="border-t border-gray-800 pt-8 text-center">
        <p class="text-gray-400 text-sm">¬© {new Date().getFullYear()} Relocation. All rights reserved.</p>
      </div>
    </div>
  </footer>
</body>
</html>
