---
import { sql } from '../../lib/db';

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/');
}

// Fetch the article with video support
const articleResult = await sql`
  SELECT
    a.id,
    a.title,
    a.content,
    a.excerpt,
    a.slug,
    a.published_at,
    a.created_at,
    a.article_angle,
    a.word_count,
    a.video_url,
    a.video_playback_id,
    a.featured_asset_url,
    a.hero_asset_url,
    (
      SELECT json_build_object('url', i.cloudinary_url, 'alt', aiu.alt_text)
      FROM article_image_usage aiu
      JOIN images i ON i.id = aiu.image_id
      WHERE aiu.article_id = a.id AND aiu.role = 'hero'
      LIMIT 1
    ) as hero_image
  FROM articles a
  WHERE a.slug = ${slug}
    AND a.app = 'relocation'
  LIMIT 1
`;

const article = articleResult[0];

if (!article) {
  return Astro.redirect('/');
}

// Content is already HTML with Tailwind classes - no parsing needed
const html = article.content;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{article.title} - Relocation Quest</title>
  <meta name="description" content={article.excerpt || article.title}>
  <script src="https://cdn.tailwindcss.com"></script>
  {article.video_playback_id && (
    <script src="https://cdn.jsdelivr.net/npm/@mux/mux-player"></script>
  )}
</head>
<body class="bg-gray-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <h1 class="text-2xl font-bold text-blue-600">
            <a href="/">Relocation Quest</a>
          </h1>
        </div>
        <div class="flex items-center space-x-8">
          <a href="/" class="text-gray-700 hover:text-blue-600 font-medium">Home</a>
          <a href="/articles" class="text-gray-700 hover:text-blue-600 font-medium">Articles</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Article Content -->
  <article class="py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Article Header -->
      <header class="mb-8">
        {article.article_angle && (
          <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded mb-4">
            {article.article_angle}
          </span>
        )}
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 leading-tight">
          {article.title}
        </h1>
        {article.excerpt && (
          <p class="text-xl text-gray-600 mb-6 leading-relaxed">
            {article.excerpt}
          </p>
        )}
        <div class="flex items-center text-sm text-gray-500 space-x-4 mb-8">
          <time datetime={article.published_at || article.created_at}>
            {new Date(article.published_at || article.created_at).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <span>•</span>
          <span>{article.word_count} words</span>
        </div>

        <!-- Hero Video or Image -->
        {article.video_playback_id ? (
          <div class="mb-8 rounded-lg overflow-hidden shadow-lg">
            <mux-player
              playback-id={article.video_playback_id}
              metadata-video-title={article.title}
              accent-color="#2563eb"
              style="aspect-ratio: 16/9; width: 100%;"
            />
          </div>
        ) : article.hero_asset_url ? (
          <div class="mb-8">
            <img
              src={article.hero_asset_url}
              alt={article.title}
              class="w-full h-auto rounded-lg shadow-lg"
            />
          </div>
        ) : article.featured_asset_url ? (
          <div class="mb-8">
            <img
              src={article.featured_asset_url}
              alt={article.title}
              class="w-full h-auto rounded-lg shadow-lg"
            />
          </div>
        ) : article.hero_image?.url && (
          <div class="mb-8">
            <img
              src={article.hero_image.url}
              alt={article.hero_image.alt || article.title}
              class="w-full h-auto rounded-lg shadow-lg"
            />
          </div>
        )}
      </header>

      <!-- Article Body - content already has Tailwind classes -->
      <div class="bg-white rounded-lg shadow-sm p-8 md:p-12">
        <div set:html={html} class="max-w-none" />
      </div>

      <!-- Back Link -->
      <div class="mt-12">
        <a href="/" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
          ← Back to articles
        </a>
      </div>
    </div>
  </article>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12 mt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-gray-400">© {new Date().getFullYear()} Relocation Quest. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
