---
import { sql } from '../../lib/db';

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/');
}

// Fetch the article with video support
const articleResult = await sql`
  SELECT
    a.id,
    a.title,
    a.content,
    a.meta_description as excerpt,
    a.slug,
    a.published_at,
    a.created_at,
    a.article_angle,
    a.word_count,
    a.video_url,
    a.video_playback_id,
    a.featured_asset_url,
    a.hero_asset_url
  FROM articles a
  WHERE a.slug = ${slug}
    AND a.app = 'relocation'
  LIMIT 1
`;

const article = articleResult[0];

if (!article) {
  return Astro.redirect('/');
}

// Content is already HTML with Tailwind classes - no parsing needed
const html = article.content;

// Clean up excerpt - truncate at sentence boundary if needed
let excerpt = article.excerpt || '';
if (excerpt.length > 0) {
  // If excerpt is truncated mid-word, try to find last complete sentence
  if (!excerpt.endsWith('.') && !excerpt.endsWith('!') && !excerpt.endsWith('?')) {
    const lastPeriod = excerpt.lastIndexOf('.');
    const lastQuestion = excerpt.lastIndexOf('?');
    const lastExclaim = excerpt.lastIndexOf('!');
    const lastSentenceEnd = Math.max(lastPeriod, lastQuestion, lastExclaim);

    if (lastSentenceEnd > excerpt.length * 0.5) {
      // Only truncate if we keep at least 50% of content
      excerpt = excerpt.substring(0, lastSentenceEnd + 1);
    } else {
      // Otherwise just add ellipsis
      excerpt = excerpt.trim() + '...';
    }
  }
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{article.title} - Relocation Quest</title>
  <meta name="description" content={article.excerpt || article.title}>
  <script src="https://cdn.tailwindcss.com"></script>
  {article.video_playback_id && (
    <script src="https://cdn.jsdelivr.net/npm/@mux/mux-player"></script>
  )}
</head>
<body class="bg-gray-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <h1 class="text-2xl font-bold text-blue-600">
            <a href="/">Relocation Quest</a>
          </h1>
        </div>
        <div class="flex items-center space-x-8">
          <a href="/" class="text-gray-700 hover:text-blue-600 font-medium">Home</a>
          <a href="/articles" class="text-gray-700 hover:text-blue-600 font-medium">Articles</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Article Content -->
  <article class="py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Article Header -->
      <header class="mb-8">
        {article.article_angle && (
          <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded mb-4">
            {article.article_angle}
          </span>
        )}
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 leading-tight">
          {article.title}
        </h1>
        {excerpt && (
          <p class="text-xl text-gray-600 mb-6 leading-relaxed">
            {excerpt}
          </p>
        )}
        <div class="flex items-center text-sm text-gray-500 space-x-4 mb-8">
          <time datetime={article.published_at || article.created_at}>
            {new Date(article.published_at || article.created_at).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <span>•</span>
          <span>{article.word_count} words</span>
        </div>

        <!-- Hero Video or Image -->
        {article.video_playback_id ? (
          <div class="mb-8 rounded-lg overflow-hidden shadow-lg">
            <mux-player
              playback-id={article.video_playback_id}
              metadata-video-title={article.title}
              accent-color="#2563eb"
              autoplay="muted"
              muted
              loop
              playsinline
              preload="auto"
              style="aspect-ratio: 16/9; width: 100%;"
            />
          </div>
        ) : article.hero_asset_url ? (
          <div class="mb-8">
            <img
              src={article.hero_asset_url}
              alt={article.title}
              class="w-full h-auto rounded-lg shadow-lg"
            />
          </div>
        ) : article.featured_asset_url && (
          <div class="mb-8">
            <img
              src={article.featured_asset_url}
              alt={article.title}
              class="w-full h-auto rounded-lg shadow-lg"
            />
          </div>
        )}
      </header>

      <!-- Article Body - content already has Tailwind classes -->
      <div class="bg-white rounded-lg shadow-sm p-8 md:p-12">
        <div set:html={html} class="article-content max-w-none" />
      </div>

      <style>
        /* Ensure article content styling works with Tailwind CDN */
        .article-content a {
          color: #2563eb;
          text-decoration: underline;
        }
        .article-content a:hover {
          color: #1d4ed8;
        }
        .article-content h2 {
          font-size: 1.5rem;
          font-weight: 700;
          color: #111827;
          margin-top: 2rem;
          margin-bottom: 1rem;
        }
        .article-content p {
          color: #374151;
          line-height: 1.75;
          margin-bottom: 1rem;
        }
        .article-content ul, .article-content ol {
          margin-bottom: 1.5rem;
          padding-left: 1.5rem;
        }
        .article-content li {
          margin-bottom: 0.5rem;
          color: #374151;
        }
        .article-content blockquote {
          border-left: 4px solid #3b82f6;
          padding-left: 1rem;
          margin: 1.5rem 0;
          font-style: italic;
          color: #4b5563;
        }
        /* Ensure embedded videos autoplay */
        .article-content mux-player {
          width: 100%;
          border-radius: 0.5rem;
          overflow: hidden;
        }
      </style>

      <!-- Back Link -->
      <div class="mt-12">
        <a href="/" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
          ← Back to articles
        </a>
      </div>
    </div>
  </article>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-12 mt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-gray-400">© {new Date().getFullYear()} Relocation Quest. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
