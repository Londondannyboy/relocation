// Fetch all published countries
const countriesResult = await sql`
  SELECT
    id, name, slug, code, flag_emoji, region, continent,
    relocation_motivations, relocation_tags, facts
  FROM countries
  WHERE status = 'published'
  ORDER BY name ASC
`;

