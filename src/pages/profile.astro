---
// Profile page - shows authenticated user info
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - Chief of Staff Quest</title>
    <style>
        body {
            font-family: system-ui, -apple-system, sans-serif;
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
            background: #f5f5f5;
        }
        .container {
            background: white;
            border-radius: 8px;
            padding: 2rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        .user-info {
            margin: 1rem 0;
            padding: 1rem;
            background: #f9f9f9;
            border-radius: 4px;
        }
        button {
            background: #dc2626;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 6px;
            font-size: 14px;
            cursor: pointer;
            margin-top: 1rem;
        }
        button:hover {
            background: #b91c1c;
        }
        .loading {
            text-align: center;
            padding: 2rem;
        }
        a {
            color: #0070f3;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div id="loading" class="loading">Loading...</div>
        <div id="profile" style="display: none;">
            <h1>Your Profile</h1>
            <div class="user-info">
                <p><strong>User ID:</strong> <span id="userId"></span></p>
                <p><strong>Email:</strong> <span id="userEmail"></span></p>
                <p><strong>Display Name:</strong> <span id="userName"></span></p>
            </div>
            <button onclick="signOut()">Sign Out</button>
            <br><br>
            <a href="/">‚Üê Back to Home</a>
        </div>
        <div id="unauthenticated" style="display: none;">
            <h1>Not Signed In</h1>
            <p>You need to sign in to view this page.</p>
            <a href="/auth/signin">Go to Sign In</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@stackframe/stack@latest/dist/index.global.js"></script>
    <script>
        async function loadProfile() {
            try {
                // Check for auth token in cookies or localStorage
                const authToken = getCookie('stack-auth-token') || localStorage.getItem('stack-auth-token');

                document.getElementById('loading').style.display = 'none';

                if (authToken) {
                    // User is authenticated - fetch their info from Stack Auth API
                    const response = await fetch('https://api.stack-auth.com/api/v1/users/me', {
                        headers: {
                            'x-stack-access-type': 'client',
                            'x-stack-project-id': '5ef873fa-5690-460a-bc2c-b29802508691',
                            'x-stack-publishable-client-key': 'pck_ga54pv0h057get6j0ej1sxeacgd0kszgs800xnydnd0v0',
                            'x-stack-access-token': authToken
                        }
                    });

                    if (response.ok) {
                        const user = await response.json();
                        document.getElementById('profile').style.display = 'block';
                        document.getElementById('userId').textContent = user.id || 'N/A';
                        document.getElementById('userEmail').textContent = user.primary_email || 'No email';
                        document.getElementById('userName').textContent = user.display_name || 'No name set';
                    } else {
                        document.getElementById('unauthenticated').style.display = 'block';
                    }
                } else {
                    document.getElementById('unauthenticated').style.display = 'block';
                }
            } catch (error) {
                console.error('Error loading profile:', error);
                document.getElementById('loading').style.display = 'none';
                document.getElementById('unauthenticated').style.display = 'block';
            }
        }

        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
        }

        window.signOut = () => {
            // Clear auth tokens
            document.cookie = 'stack-auth-token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
            localStorage.removeItem('stack-auth-token');
            window.location.href = '/';
        };

        loadProfile();
    </script>
</body>
</html>
